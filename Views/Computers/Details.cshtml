@using Online.Shopping.Store
@model Product

@{
    ViewBag.Title = "Computers";
    string category = null;
    string stringLink = null;
    if (Model.ProductCategory == "Tower")
    {
        category = "Tower";
        stringLink = "Tower";
    }
    if (Model.ProductCategory == "Desktop")
    {
        category = "Desktop";
        stringLink = "Desktop";
    }
    if (Model.ProductCategory == "Server")
    {
        category = "Server";
        stringLink = "Server";
    }
           
     
}


<h2>Product Details <span style="font-size: 50%"><< @Html.ActionLink(category, stringLink, "Computers") << @Html.ActionLink("Computers", "Index", "Computers")</span></h2>

<table>
    <tr>
        <td rowspan="4">
            <img src="@Url.Content(Model.ProductPicUrl)" width="300" height="300" /></td>
        <td>
            <h3>@Model.ProductName</h3>
            <h3 style="color: red; margin-top: 2px">RS= @Model.ProductPrice</h3>
        </td>
    </tr>
    <tr>
        <td>
            <label>Color: </label>@Model.ProductColor
            <label>Material: </label>@Model.ProductMatertial
        </td>
    </tr>
    <tr>
        <td>
            <label>Information: </label>
            @Model.ProductInfo
        </td>
    </tr>
    <tr>
        <td>
               <h3>@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ProductId }, "")</h3> 
        </td>
    </tr>
</table>


