@using Online.Shopping.Store;
@model Product

@{
    ViewBag.Title = "Computer Accessories";
    string category = null;
    string stringLink = null;
    if (Model.ProductCategory == "Keyboard")
    {
        category = stringLink = "Keyboard";
    } 
    if (Model.ProductCategory == "Mouse")
    {
        category = stringLink = "Mouse";
    } 
    if (Model.ProductCategory == "CD-ROM")
    {
        category = stringLink = "CD-ROM";
    }     
}


<h2>Product Details <span style="font-size: 50%"><< @Html.ActionLink(category, stringLink, "Accessories") << @Html.ActionLink("Accessories", "Index", "Accessories")</span></h2>

<table>
    <tr>
        <td rowspan="4">
            <img src="@Url.Content(Model.ProductPicUrl)" width="300" height="300" /></td>
        <td>
            <h3>@Model.ProductName</h3>
            <h3 style="color: red; margin-top: 2px">RS= @Model.ProductPrice</h3>
        </td>
    </tr>
    <tr>
        <td>
            <label>Color: </label>@Model.ProductColor
            <label>Material: </label>@Model.ProductMatertial
        </td>
    </tr>
    <tr>
        <td>
            <label>Information: </label>
            @Model.ProductInfo
        </td>
    </tr>
    <tr>
        <td>
            <h3>@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ProductId }, "")</h3>
        </td>
    </tr>
</table>


